{% extends "hepiaThanatosBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Projet{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Projet</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Liste des projets
                    </div>
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for project in projects %}
                                    <tr onclick="window.document.location = '{{ path('hepia_thanatos_project_view', {'id': project.id}) }}';" style="cursor:pointer;">
                                        <td>{{ project.title }}</td>
                                        <td>{{ project.description }}</td>
                                    </tr>
                                {% endfor %} 
                            </tbody>
                        </table>
                        {% include 'hepiaThanatosBundle::pagination.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}